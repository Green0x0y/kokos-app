<LoginScreen>:
    Image:
        source: 'data/background.png'
        allow_stretch: True
        keep_ratio: False


    GridLayout:

        cols: 1
        rows:3
        #row_force_default:  True
        #row_default_height: (self.height - self.spacing[1]*(self.rows-1))/self.rows


        Image:
            source: 'data/logo.png'
            size_hint_y: 0.3
        Label:
            size_hint_y: 0.5
            text: 'KOKOS'
            font_size: self.height/3
            font_name: 'Roboto-Bold.ttf'
            color: 1, 1, 1, 1

        BoxLayout:

            orientation: 'vertical'
            padding: (self.width * 0.1, 0, self.width * 0.1,self.height *0.1)
            spacing: self.height *0.05


            RoundedInput:
                id: username_input
                hint_text: 'Email'

            RoundedInput:
                id: password_input
                hint_text: 'Hasło'
                password: True

            Button:
                background_color: 0.4, 0.6, 1, 0
                text: 'Zapomniałem hasła'
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/2
                color:  0.517, 0.41, 0.33, 1
                on_press: root.move_to_forgot_password(self)
                pos_hint: {'center_x': 0.5}

            Label:
                id: error_label
                text: ""
                color: 0.9, 0, 0, 1
                spacing: 0
                padding: 0, 0

            Button:

                text: 'Zaloguj się'
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/2
                # size_hint_x: 0.7
                # size_hint_y: 0.8
                background_normal: ''
                background_color: 0.517, 0.41, 0.33, 1
                color: 1, 1, 1, 1
                on_press: root.login(self)
                pos_hint: {'center_x': 0.5}



            Button:
                background_color: 0.4, 0.6, 1, 0
                text: 'Nie mam konta'
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/2
                size_hint_x: 0.7
                size_hint_y: 0.8
                color:  0.517, 0.41, 0.33, 1
                on_press: root.move_to_signup(self)
                pos_hint: {'center_x': 0.5}

#:kivy 2.1.0
<SignUpScreen>:
    Image:
        source: 'data/background.png'
        allow_stretch: True
        keep_ratio: False

    GridLayout:

        cols: 1
        rows:3

        Image:
            source: 'data/logo.png'
            size_hint_y: 0.3

        Label:
            size_hint_y: 0.25
            text: 'KOKOS'
            font_size: self.height/1.8
            font_name: 'Roboto-Bold.ttf'
            color: 1, 1, 1, 1

        BoxLayout:

            orientation: 'vertical'
            padding: (self.width * 0.1, 0, self.width * 0.1,self.height *0.1)
            spacing: self.height *0.07

            RoundedInput:
                id: username_input
                hint_text: 'Nazwa użytkownika'
            
            RoundedInput:
                id: email_input
                hint_text: 'Email'

            RoundedInput:
                id: password_input
                hint_text: 'Hasło'

            RoundedInput:
                id: password_input_2
                hint_text: 'Powtórz hasło'

            Label:
                id: error_label
                text: ""
                color: 0.9, 0, 0, 1
                spacing: 0
                padding: 0, 0

            Button:
                text: 'Zarejestruj się'
                font_name: 'Roboto-Bold.ttf'
                size_hint_x:0.7
                font_size: self.height/2
                background_normal: ''
                background_color: 0.517, 0.41, 0.33, 1
                color: 1, 1, 1, 1
                pos_hint: {'center_x': 0.5}
                on_press: root.add_user(self)
            Button:
                background_color: 0.4, 0.6, 1, 0
                text: 'Mam już konto'
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/2
                size_hint_x: 0.7
                size_hint_y: 0.8
                background_color:
                color:  0.517, 0.41, 0.33, 1
                on_press: root.switch_to_login_screen(self)
                pos_hint: {'center_x': 0.5}


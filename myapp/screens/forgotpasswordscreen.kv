#:kivy 2.1.0

<ForgotPasswordScreen>:
    canvas.before:
        Rectangle:
            source: 'data/background_2.jpg'
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        rows:4
        Image:
            source: 'data/logo.png'

        Label:
            font_size: self.height/5.5
            text: 'Podaj swój adres email'
            font_name: 'Roboto-Bold.ttf'
            color: 0.517, 0.41, 0.33, 1

        Label:
            id: error_label
            color: 1, 0, 0, 1
            text: ""
            spacing: 0
            padding: 0, 0
            size_hint_y: 0.3

        BoxLayout:
            size_hint_y: 2
            orientation: 'vertical'
            padding: (self.width * 0.1, 0, self.width * 0.1, self.height*0.1)
            spacing: self.height*0.5
            RoundedInput:
                id: reset_email_input
                hint_text: 'email'

            Button:
                text: 'Zmień hasło'
                on_press: root.send_passwd_reset(self)
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/4
                size_hint_x: 0.8
                size_hint_y: 1
                background_normal: ''
                background_color: 1, 1, 1, 1
                color: 0.517, 0.41, 0.33, 1
                pos_hint: {'center_x': 0.5}

#:import Factory kivy.factory.Factory
#:kivy 2.1.0
<SettingsScreen>:
   canvas.before:
      Rectangle:
         source: 'data/background.png'
         pos: self.pos
         size: self.size
   BoxLayout:
      orientation: 'vertical'
      spacing: self.height*0.05
      padding: (self.width * 0.05, self.height*0.05, self.width * 0.05, self.height*0.05)
      Label:
         text: "Ustawienia"
         font_size: self.height/2
         font_name: 'Roboto-Bold.ttf'
      BoxLayout:
         size_hint_y: 0.8
         size_gint_x: 0.7
         canvas.before:
            Color:
               rgba: 1,1,1,1
            Rectangle:
               pos: self.pos
               size: self.size
         Label:
            id: mail_label
            font_size: self.height/5
            font_name: 'Roboto-Bold.ttf'
            text: "Powiadomienia mailowe on"
            color: 0.517, 0.41, 0.33, 1
            padding_x: self.width * 0.1
         Switch:
            active: True
            font_size: self.height/4
            font_name: 'Roboto-Bold.ttf'
            on_active: root.switch_click(self, self.active)

      Button:
         text: "Dodaj Rejestrację"
         font_size: self.height/4
         font_name: 'Roboto-Bold.ttf'
         size_hint_x: 0.8
         size_hint_y: 0.8
         background_normal: ''
         background_color:  1,1,1,1
         color: 0.517, 0.41, 0.33, 1
         pos_hint: {'center_x': 0.5} 
         on_release: root.switch_to_addregistration_screen(self)
      Button:
         text: "Usuń rejestrację"
         font_size: self.height/4
         font_name: 'Roboto-Bold.ttf'
         size_hint_x: 0.8
         size_hint_y: 0.8
         background_normal: ''
         background_color:  1,1,1,1
         color: 0.517, 0.41, 0.33, 1
         pos_hint: {'center_x': 0.5}
         on_release: root.switch_to_deleteregistration_screen(self)

      Button:
         text: "Zmień nazwę użytkownika"
         font_size: self.height/4
         font_name: 'Roboto-Bold.ttf'
         size_hint_x: 0.8
         size_hint_y: 0.8
         background_normal: ''
         background_color:  1,1,1,1
         color: 0.517, 0.41, 0.33, 1
         pos_hint: {'center_x': 0.5}
         on_release: root.switch_to_updateusername_screen(self)


      

        
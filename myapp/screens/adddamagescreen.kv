#:kivy 2.1.0

<AddDamageScreen>:
    canvas.before:
        Color:
            rgba: (0.4, 0.6, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint: (1,1)

        orientation: 'vertical'
        Label:
            text: 'Napisz do właściciela'
            font_size: root.height/15
            font_name: 'Roboto-Bold.ttf'
            pos_hint: {'center_x': 0.5}
        Label:
            font_size: root.height/20
            font_name: 'Roboto-Bold.ttf'
            text: 'Numer rejestracji'
            pos_hint: {'center_x': 0.5}
        Label:
            id: registration
            text: 'ok'
            font_size: root.height/20
            pos_hint: {'center_x': 0.5}
        #Label:
        #    text: 'Rodzaj Szkody'
        #    font_size: root.height/20
        #    font_name: 'Roboto-Bold.ttf'
        #    pos_hint: {'center_x': 0.5}
        #RoundedInput:
        #    text: 'ok'
        #    pos_hint: {'center_x': 0.5}
        Label:
            text: 'Wiadomość'
            font_size: root.height/20
            font_name: 'Roboto-Bold.ttf'
            pos_hint: {'center_x': 0.5}
        RoundedInput:
            id: message
            text: ''
            size_hint_y: None
            height: root.height/4
            pos_hint: {'center_x': 0.5}
        Label:
            id: result
            height: root.height/10
            font_size: root.height/20
            text: ''
        RoundedButton:
            text: 'Wyślij'
            pos_hint: {'center_x': 0.5}
            on_press: root.send()



#:kivy 2.1.0
<UserCodeScreen>:
    canvas.before:
        Color:
            rgba: (0.4, 0.6, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        Image:
            source: 'data/logo.png'
        Label:
            size_hint_y: 0.4
            text: 'Kod u≈ºytkownika'
            font_name: 'Roboto-Bold.ttf'
            font_size: self.height/3

        BoxLayout:
            size_hint_y: 2
            orientation: 'vertical'
            padding: (self.width * 0.1, self.height*0.1, self.width * 0.1, self.height*0.1)
            spacing: self.height*0.5

            RoundedInput:
                id: code_input

            Button:
                size_hint_x: 0.8
                size_hint_y: 0.7
                text: 'Szukaj'
                on_press: root.verify_code(self)
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/4
                background_color: 0.1, 0.3, 0.6, 1
                color: 1, 1, 1, 1
                on_press: root.login(self)
                pos_hint: {'center_x': 0.5}

#:kivy 2.1.0

<AddRegistrationScreen>:
    canvas.before:
        Color:
            rgba: (0.4, 0.6, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        rows:5
        Image:
            source: 'data/logo.png'


        Label:
            font_size: self.height/6
            text: 'Dodaj rejestracjÄ™'
            font_name: 'Roboto-Bold.ttf'
        Label:
            id: error_label
            text: ""
            color: 0.9, 0, 0, 1
            spacing: 0
            padding: 0, 0
            size_hint_y: 0.3
        Label:
            id: success_label
            text: ""
            spacing: 0
            padding: 0, 0
            size_hint_y: 0.4

        BoxLayout:
            size_hint_y: 2
            orientation: 'vertical'
            padding: (self.width * 0.1, 0, self.width * 0.1, self.height*0.1)
            spacing: self.height*0.5
            TextInput:
                id: code_input
                padding:(self.width * 0.1, self.height*0.3)
                font_size: self.height/3
                size_hint_y: 0.8
                background_color: (0.4, 0.6, 1, 1)
                background_normal: ''
                background_active: ''
                border: (1, 1, 1, 1)
                border_radius: [60,]
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [60,]
                    Color:
                        rgba: (0.5, 0.5, 0.5, 1)

            Button:
                text: 'Dodaj'
                #on_press: root.go_to_chat(self)
                on_press: root.add_registration(self)
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/4
                size_hint_x: 0.8
                size_hint_y: 1
                background_color: 0.1, 0.3, 0.6, 1
                color: 1, 1, 1, 1
                pos_hint: {'center_x': 0.5}


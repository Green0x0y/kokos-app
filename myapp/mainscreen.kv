<MainScreen>:
    GridLayout:
        cols: 1
        rows: 5


        canvas:
            Color:
                rgba: 0.4, 0.6, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 2


            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0, 0, 100, 100]
            Label:
                text: "KOKOS"
                color: 0.4, 0.6, 1, 1
                font_size: self.height/2
                font_name: 'Roboto-Bold.ttf'
            Label:
                text: "twoja nazwa"
                color: 0.4, 0.6, 1, 1
                font_size: self.height/4


        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 3
            padding: (self.width * 0.1, self.height*0.1, self.width * 0.1, self.height*0.1)
            spacing: self.height*0.05
            Button:
                text: "Skanuj kod"
                on_press: root.switch_to_qr_screen(self)
                #text: 'Scan QR Code'
                font_size: '30sp'
                id: scan_code_button
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/5
                background_color: 0.1, 0.3, 0.6, 1
                color: 1, 1, 1, 1


            Button:
                text: 'Wyszukaj po rejestracji'
                on_press: root.switch_to_registration_screen(self)
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/5
                background_color: 0.1, 0.3, 0.6, 1
                color: 1, 1, 1, 1

            Button:
                text: 'Moje czaty'
                on_press: print('My previous chats')
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/5

                background_color: 0.1, 0.3, 0.6, 1
                color: 1, 1, 1, 1

            Button:
                text: 'Ustawienia'
                on_press: print('Settings')
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/5

                background_color: 0.1, 0.3, 0.6, 1
                color: 1, 1, 1, 1
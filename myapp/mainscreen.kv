<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 60, 60
        spacing: 20
        canvas.before:
            Color:
                rgba: 0.4, 0.6, 1, 0.1  # ustawienie koloru t≈Ça
            Rectangle:
                pos: self.pos
                size: self.size
        Label:

            font_size: '20sp'
        Button:
            text: 'Enter user code'
            size_hint_y: None
            height: '48dp'
            on_press: root.switch_to_user_code_screen(self)
        Button:
            text: 'Enter registration number'
            size_hint_y: None
            height: '48dp'
            on_press: print('Enter registration number')
        Button:
            text: 'My previous chats'
            size_hint_y: None
            height: '48dp'
            on_press: print('My previous chats')
<UserCodeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 60, 60
        spacing: 20
        canvas:
            Color:
                rgba: 0.4, 0.6, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Enter code of user you want to contact'
            font_name: 'Roboto-Bold.ttf'
            font_size: '30sp'
        TextInput:
            id: code_input
            size_hint_y: 0.5
            padding:40, 40
            height: '48dp'
            background_color: (0.4, 0.6, 1, 1)
            background_normal: ''
            background_active: ''
            border: (1, 1, 1, 1)
            border_radius: [40,]
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [40,]
                Color:
                    rgba: (0.5, 0.5, 0.5, 1)
        Button:
            text: 'Find user'
            size_hint_y: None
            height: '48dp'
            on_press: root.verify_code(self)
            font_name: 'Roboto-Bold.ttf'
            size_hint_y: None
            height: 150
            font_size: '18sp'
            size_hint_x: None
            width: 500
            background_color: 0.1, 0.3, 0.6, 1
            color: 1, 1, 1, 1
            on_press: root.login(self)
            pos_hint: {'center_x': 0.5}
#:kivy 2.1.0

<MyMessage@BoxLayout>:
    orientation: 'vertical'
    spacing: 5
    size_hint: 0.7, None
    # message label
    Label:
        id: label
        size_hint_x: None
        color: (0.2, 0.2, 0.2, 0.7)
        font_name: 'Roboto-Bold.ttf'
        width: self.texture_size[0]
#  msg_box
    StackLayout:
        orientation: 'rl-tb'
        spacing: [5, 0]
        padding: 5, 5
        Message:
            size_hint: 0.6, None
            id: content
            canvas.before:
                Color: 
                    rgba: (0, 1, 0, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,]
            
        Button:
            id: delete
            size_hint: (None, .6)
            width: self.height
            padding: 5, 0
            border: [0, 0, 0, 0]
            vertical_align: 'center'
            # background_color: [1,0,0,0.5]
            background_normal:  'data/thrash.png'
            background_disabled_normal: '/home/mr_nobody/studia/Semestr4/Python/Kokos_App/myapp/data/thrash.png'
            background_disabled_active: '/home/mr_nobody/studia/Semestr4/Python/Kokos_App/myapp/data/thrash.png'
            background_down: '/home/mr_nobody/studia/Semestr4/Python/Kokos_App/myapp/data/thrash.png'




            
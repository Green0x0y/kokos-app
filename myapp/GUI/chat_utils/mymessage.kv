#:kivy 2.1.0

<MyMessage@BoxLayout>:
    orientation: 'vertical'
    spacing: 5
    padding: (10, 10)
    size_hint_y: None
    # message label
    Label:
        id: label
        size_hint_x: None
        color: (0.2, 0.2, 0.2, 0.7)
        font_name: 'Roboto-Bold.ttf'
        width: self.texture_size[0]
#  msg_box
    StackLayout:
        orientation: 'rl-tb'
        Label:
            id: content
            background_color: (0, 1, 0, 1)
            size_hint_x: None
            font_size: 10
            font_name: 'Roboto-Bold.ttf'
            color: (0, 0, 0, 1)
            bold: True
            padding: 30, 10
            canvas.before:
                Color: 
                    rgba: (0, 1, 0, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,]
        Button:
            text:"del"
            width: 20
            size_hint: (0.2, 1)
            



            
#:kivy 2.1.0

<OtherMessage@BoxLayout>:
    orientation: 'vertical'
    size_hint: 0.7, None
    spacing: 5
    padding: (10, 10)
    # message label
    Label:
        id: label
        size_hint_x: None
        color: (0.2, 0.2, 0.2, 0.7)
        font_name: 'Roboto-Bold.ttf'
        width: self.texture_size[0]
#  msg_box
    Message:
        id: content
        size_hint: 0.7, None
        canvas.before:
            Color: 
                rgba: (1, 1, 1, 1)
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20,]

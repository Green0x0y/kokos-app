<LoginScreen>:
    canvas.before:
        Color:
            rgba: (0.4, 0.6, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:

        cols: 1
        rows:8
        #row_force_default:  True
        #row_default_height: (self.height - self.spacing[1]*(self.rows-1))/self.rows

        padding: [100, 30]
        spacing: 20

        Image:
            source: 'logo.png'
            size_hint_y: 2

        Label:

            text: 'KOKOS'
            font_size: self.height
            font_name: 'Roboto-Bold.ttf'
            color: 1, 1, 1, 1


        Label:

            pos: (200,0)
            text: 'Username'
            color: 0.9, 0.9, 0.9, 1
            font_size: self.height/3
            font_name: 'Roboto-Bold.ttf'

            size_hint_x: None

        TextInput:

            id: username_input
            hint_text: 'Username'
            font_size: self.height/3
            hint_text_color:0, 0, 0, 1
            background_color: (0.4, 0.6, 1, 0.1)
            background_normal: ''
            background_active: ''
            border: (1, 1, 1, 1)
            padding:32, 32
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [40,]
                Color:
                    rgba: (0.5, 0.5, 0.5, 1)




        Label:
            text: 'Password'
            pos: (200,0)
            color: 0.9, 0.9, 0.9, 1
            font_size: self.height/3
            font_name: 'Roboto-Bold.ttf'

            size_hint_x: None

        TextInput:
            id: password_input
            hint_text: 'Password'
            font_size: self.height/3
            padding:32, 32
            password: True

            background_color: (0.4, 0.6, 1, 1)
            background_normal: ''
            background_active: ''
            border: (1, 1, 1, 1)
            border_radius: [40,]
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [40,]
                Color:
                    rgba: (0.5, 0.5, 0.5, 1)


        Button:

            text: 'Log in'
            font_name: 'Roboto-Bold.ttf'
            font_size: self.height/3
            width: 500
            background_color: 0.1, 0.3, 0.6, 1
            color: 1, 1, 1, 1
            on_press: root.login(self)
            pos_hint: {'center_x': 0.5}



        Button:

            text: 'Sign up'
            font_name: 'Roboto-Bold.ttf'
            font_size: self.height/3
            width: 500
            background_color: 0.1, 0.3, 0.6, 1
            color: 1, 1, 1, 1
            on_press: root.move_to_signup(self)
            pos_hint: {'center_x': 0.5}

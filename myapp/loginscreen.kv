<LoginScreen>:
    BoxLayout:

        orientation: 'vertical'
        spacing: 100
        padding: 20, 20
        canvas:
            Color:
                rgba: 0.4, 0.6, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            padding:50,200
            Image:
                source: 'logo.png'
                height:300

            Label:

                text: 'KOKOS'
                font_size: '60sp'
                font_name: 'Roboto-Bold.ttf'
                size_hint_y: None
                height: 100
                color: 1, 1, 1, 1
        BoxLayout:
            padding:100,100
            orientation: 'vertical'
            size_hint_y: None
            height: 200
            Label:
                pos: (200,0)
                text: 'Username'
                color: 0.9, 0.9, 0.9, 1
                font_size: '18sp'
                font_name: 'Roboto-Bold.ttf'
                size_hint_y: None
                size_hint_x: None
                height: 100
            TextInput:
                id: username_input
                hint_text: 'Username'
                font_size: "18sp"
                padding:40, 40
                hint_text_color:0, 0, 0, 1
                size_hint_y: None
                height: 150
                background_color: (0.4, 0.6, 1, 0.1)
                background_normal: ''
                background_active: ''
                border: (1, 1, 1, 1)

                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [40,]
                    Color:
                        rgba: (0.5, 0.5, 0.5, 1)


        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 200
            padding:100,100
            Label:
                text: 'Password'
                pos: (200,0)
                color: 0.9, 0.9, 0.9, 1
                font_size: '18sp'
                font_name: 'Roboto-Bold.ttf'
                size_hint_y: None
                size_hint_x: None
                height: 100
            TextInput:
                id: password_input
                hint_text: 'Password'
                font_size: "18sp"
                padding: 40,40
                password: True
                size_hint_y: None
                height: 150
                background_color: (0.4, 0.6, 1, 1)
                background_normal: ''
                background_active: ''
                border: (1, 1, 1, 1)
                border_radius: [40,]
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [40,]
                    Color:
                        rgba: (0.5, 0.5, 0.5, 1)

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.7
            padding:10,10

            Widget:
            Button:
                text: 'Login'
                font_name: 'Roboto-Bold.ttf'
                size_hint_y: None
                height: 150
                font_size: '18sp'
                size_hint_x: None
                width: 500
                background_color: 0.1, 0.3, 0.6, 1
                color: 1, 1, 1, 1
                on_press: root.login(self)
                pos_hint: {'center_x': 0.5}




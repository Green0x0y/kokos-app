<SignUpScreen>:
    canvas.before:
        Color:
            rgba: (0.4, 0.6, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:

        cols: 1
        rows:3
        #row_force_default:  True
        #row_default_height: (self.height - self.spacing[1]*(self.rows-1))/self.rows


        Image:
            source: 'logo.png'
            size_hint_y: 0.5

        Label:
            size_hint_y: 0.25
            text: 'KOKOS'
            font_size: self.height/1.8
            font_name: 'Roboto-Bold.ttf'
            color: 1, 1, 1, 1

        BoxLayout:

            orientation: 'vertical'
            padding: (self.width * 0.1, 0, self.width * 0.1,self.height *0.1)
            spacing: self.height *0.07


            TextInput:
                id: username_input
                hint_text: 'Nazwa użytkownika'
                font_size: self.height/3
                padding: (self.width * 0.1, self.height*0.3)
                hint_text_color:0, 0, 0, 1
                background_color: (0.4, 0.6, 1, 0.1)
                background_normal: ''
                background_active: ''
                border: (1, 1, 1, 1)

                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [40,]
                    Color:
                        rgba: (0.5, 0.5, 0.5, 1)
            TextInput:
                id: username_input
                hint_text: 'Email'
                font_size: self.height/3
                padding: (self.width * 0.1, self.height*0.3)
                hint_text_color:0, 0, 0, 1
                background_color: (0.4, 0.6, 1, 0.1)
                background_normal: ''
                background_active: ''
                border: (1, 1, 1, 1)

                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [40,]
                    Color:
                        rgba: (0.5, 0.5, 0.5, 1)

            TextInput:
                id: password_input
                hint_text: 'Hasło'
                font_size: self.height/3
                padding: (self.width * 0.1, self.height*0.3)
                password: True

                background_color: (0.4, 0.6, 1, 1)
                background_normal: ''
                background_active: ''
                border: (1, 1, 1, 1)
                border_radius: [40,]
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [40,]
                    Color:
                        rgba: (0.5, 0.5, 0.5, 1)



            TextInput:
                id: password_input_2
                hint_text: 'Powtórz hasło'
                font_size: self.height/3
                padding: (self.width * 0.1, self.height*0.3)
                password: True

                background_color: (0.4, 0.6, 1, 1)
                background_normal: ''
                background_active: ''
                border: (1, 1, 1, 1)
                border_radius: [40,]
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [40,]
                    Color:
                        rgba: (0.5, 0.5, 0.5, 1)




            Button:
                text: 'Zarejestruj się'
                font_name: 'Roboto-Bold.ttf'
                size_hint_x:0.7
                font_size: self.height/3
                background_color: 0.1, 0.3, 0.6, 1
                color: 1, 1, 1, 1
                pos_hint: {'center_x': 0.5}
            Button:
                background_color: 0.4, 0.6, 1, 0
                text: 'Mam już konto'
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/3
                size_hint_x: 0.7
                size_hint_y: 0.8
                background_color:
                color: 1, 1, 1, 1
                on_press: root.switch_to_login_screen(self)
                pos_hint: {'center_x': 0.5}


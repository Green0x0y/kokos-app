
<RegistrationScreen>
    BoxLayout:
        orientation: 'vertical'
        padding: 60,0
        canvas:
            Color:
                rgba: 0.4, 0.6, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: 'logo.png'
            size_hint_y: 0.3
        Widget:
            size_hint_y: 0.03
        Label:
            size_hint_y: 0.1
            text: 'Enter registration '
            font_name: 'Roboto-Bold.ttf'
            font_size: '70'

        Widget:
            size_hint_y: 0.1
        TextInput:
            id: code_input
            size_hint_y: 0.1
            padding:50,50
            height: '60'
            background_color: (0.4, 0.6, 1, 1)
            background_normal: ''
            background_active: ''
            border: (1, 1, 1, 1)
            border_radius: [60,]
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [60,]
                Color:
                    rgba: (0.5, 0.5, 0.5, 1)
        Widget:
            size_hint_y: 0.15
        Button:
            text: 'Find user'

            on_press: root.verify_code(self)
            font_name: 'Roboto-Bold.ttf'
            size_hint_y: 0.1

            font_size: '40'
            size_hint_x: None
            width: 500
            background_color: 0.1, 0.3, 0.6, 1
            color: 1, 1, 1, 1
            on_press: root.login(self)
            pos_hint: {'center_x': 0.5}
        Widget:

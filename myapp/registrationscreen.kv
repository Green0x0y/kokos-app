<RegistrationScreen>
    canvas.before:
        Color:
            rgba: (0.4, 0.6, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        rows:4
        Image:
            source: 'logo.png'


        Label:
            font_size: self.height/6
            text: 'Rejestracja u≈ºytkownika'
            font_name: 'Roboto-Bold.ttf'


        BoxLayout:
            size_hint_y: 2
            orientation: 'vertical'
            padding: (self.width * 0.1, 0, self.width * 0.1, self.height*0.1)
            spacing: self.height*0.5
            TextInput:
                id: code_input
                padding:(self.width * 0.1, self.height*0.3)
                font_size: self.height/3
                size_hint_y: 0.8
                background_color: (0.4, 0.6, 1, 1)
                background_normal: ''
                background_active: ''
                border: (1, 1, 1, 1)
                border_radius: [60,]
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [60,]
                    Color:
                        rgba: (0.5, 0.5, 0.5, 1)

            Button:
                text: 'Szukaj'
                on_press: root.verify_code(self)
                font_name: 'Roboto-Bold.ttf'
                font_size: self.height/4
                size_hint_x: 0.8
                size_hint_y: 1
                background_color: 0.1, 0.3, 0.6, 1
                color: 1, 1, 1, 1
                on_press: root.login(self)
                pos_hint: {'center_x': 0.5}
